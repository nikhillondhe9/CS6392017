<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nikhil.textsqueeze.Main2ActivityFragment"
    tools:showIn="@layout/activity_main2">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CpyBtn"
        android:text="Copy"
        android:onClick="CopyBtn"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ShrBtn"
        android:layout_toRightOf="@id/CpyBtn"
        android:text="Share"
        android:onClick="ShareBtn"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Edtxt2"
        android:background="#ededed"
        android:layout_below="@id/CpyBtn"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"/>


</RelativeLayout>
